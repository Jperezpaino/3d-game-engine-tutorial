# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_style = space
indent_size = 2
max_line_length = 80

[*.{xml,xsd,xsl}]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{json,jsonc}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.properties]
indent_style = space
indent_size = 2

[{pom.xml,*.pom}]
indent_style = space
indent_size = 2
